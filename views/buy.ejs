  <style>
    html,
    body,
    header,
    #intro {
      height: 100%;
      height: 100vh;
    }

    .row {
      margin: 1%;

      padding: 2%;
    }
    .vertical-center {
      margin: 0;
      position: absolute;
      top: 50%;
      -ms-transform: translateY(-50%);
      transform: translateY(-50%);
    }
  </style>
  <body>
    <!--Landing page-->
    <!--Main Navigation-->
    <!--Navbar-->
    <%- include('./common/nav'); -%>
    <!--/.Navbar-->
    <!--Mask-->

    <!--/.Mask-->

    <!--Main Navigation-->

    <!--Main layout-->
    <main>
      <!-- Section: Features v.1 -->
      <section class="text-center my-5">
        <br />
        <h2 style="font-family: 'Nunito Sans', sans-serif; font-size: 1.5rem;">
          Buy Phone
        </h2>

        <div class="row">
          <div class="col-md-6">
            <img
              src="images/bg3.svg"
              style="width: 100%; height: 100%;"
              alt="image"
            />
          </div>
          <div class="col-md-6">
            <!-- Vertical Steppers -->
            <div class="row mt-1">
              <div class="col-md-12">
                <!-- Stepers Wrapper -->
                <ul class="stepper stepper-vertical">
                  <!-- First Step -->
                   <li class="completed">
                    <a href="/buy/specific">
                      <span class="circle" id="nav" >1</span>
                      <span class="label"><button  class="btn" id="btn">Required Specific Phone</button>  </span>
                    </a>
                  </li>

                  <!-- Second Step -->
                  <li class="active">
                    <!--Section Title -->
                    <a  data-toggle="modal" data-target="#basicExampleModal">
                      <span class="circle" id="nav" >2</span>
                      <span class="label"><button class="btn" id="prebtn">Check Available Phone</button></span>
                    </a>

                    <!-- Section Description -->
                    </div>
                  </li>

                  <!-- Third Step -->
                </ul>
                <!-- /.Stepers Wrapper -->
              </div>
            </div>

            <!-- /.Vertical Steppers -->
          </div>
        </div>
      </section>
      <!-- Section: Features v.1 -->
    </main>
    <!--Main layout-->

    <div class="modal fade" id="basicExampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
  aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Check Available Phone</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <form  class="text-center p-5"  style="text-align: left;" action="#!">
        <input type="email"  class="form-control" name="email" placeholder="Enter Email" required />
     
     <br />
        <input
        type="text"
        class="form-control mb-4"
        
        placeholder="Phone Number"
        name="phone"
        pattern="[2-9]{2}\d{8}"
        required
      />
        <label id="range">0</label>
      <input  class="multi-range" id="budget" step="500" min="5000" max="150000" style="width: 100%;" type="range" />
        
        <br />
        <button  class="btn" id="prebtn" type="submit">Submit</button>
         </form> 
         
      </div>
     
    </div>
  </div>
</div>

    <script
      type="text/javascript"
      src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.5.1/jquery.min.js"
