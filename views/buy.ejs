    <%- include('./common/footer') -%>
    <!-- Footer -->
<script>
  const range =document.querySelector("#range");
  
  const budget =document.querySelector("#budget");
  budget.value=20000;
  range.innerHTML=`Phone Price Less Than <i class="fas fa-rupee-sign"></i>${budget.value}`;
  const changebudget=(e)=>{
    range.innerHTML=`Phone Price Less Than <i class="fas fa-rupee-sign"></i>${budget.value}`;
  }
  addEvent("input",budget,changebudget)

</script>    
