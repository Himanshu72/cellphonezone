<!DOCTYPE html>
<html lang="en">
  <head>
    <title>Cell Phone Zone</title>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <!-- Font Awesome -->
    <link
      rel="stylesheet"
      href="https://use.fontawesome.com/releases/v5.8.2/css/all.css"
    />
    <!-- Google Fonts -->
    <!-- Bootstrap core CSS -->
    <link
      href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.5.0/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <!-- Material Design Bootstrap -->
    <link
      href="https://cdnjs.cloudflare.com/ajax/libs/mdbootstrap/4.19.1/css/mdb.min.css"
      rel="stylesheet"
    />
    <link href="stylesheets/style.css" rel="stylesheet" />
    <link
      href="https://fonts.googleapis.com/css2?family=Nunito+Sans:ital,wght@1,600&display=swap"
      rel="stylesheet"
    />
    <link
      href="https://fonts.googleapis.com/css2?family=Source+Code+Pro:ital,wght@1,600&display=swap"
      rel="stylesheet"
    />
  </head>
  <style>
    html,
    body,
    header,
    #intro {
      height: 100%;
      height: 100vh;
    }

    .row {
      margin: 1%;

      padding: 2%;
    }
  </style>
  <body>
    <!--Landing page-->
    <!--Main Navigation-->
    <!--Navbar-->
    <%- include('./common/nav'); -%>
    <!--/.Navbar-->
    <!--Mask-->

    <!--/.Mask-->

    <!--Main Navigation-->

    <!--Main layout-->
    <main>
      <!-- Section: Features v.1 -->
      <section class="text-center my-5">
        <br />
        <h2 style="font-family: 'Nunito Sans', sans-serif; font-size: 1.5rem;">
          Buy Phone
        </h2>

        <div class="row">
          <div class="col-md-6">
            <img
              src="images/bg3.svg"
              style="width: 100%; height: 100%;"
              alt="image"
            />
          </div>
          <div class="col-md-6">
            <!-- Default form contact -->
            <form class="text-center p-5" style="text-align: left;" action="#!">
              <!-- Name -->
              <input
                type="text"
                class="form-control mb-4"
                placeholder="Name"
                name="name"
                maxlength="50"
                minlength="3"
                require
              />

              <!-- Email -->
              <input
                type="email"
                class="form-control mb-4"
                placeholder="E-mail"
                name="email"
                required
                maxlength="320"
                minlength="3"
              />

              <input
                type="text"
                class="form-control mb-4"
                placeholder="Phone Number"
                name="phone"
                pattern="[2-9]{2}\d{8}"
                required
              />
              <input
                type="text"
                class="form-control mb-4"
                placeholder="Required Phone Company Name"
                name="company"
                minlength="3"
                maxlength="30"
                required
              />
              <input
                type="text"
                class="form-control mb-4"
                placeholder="Required Model Number"
                name="model"
                minlength="3"
                maxlength="30"
                required
              />

              <div class="form-group">
                <textarea
                  class="form-control rounded-0"
                  rows="3"
                  placeholder="Enter your needs "
                  minlength="10"
                  maxlength="1000"
                ></textarea>
              </div>

              <!-- Send button -->
              <button id="prebtn" style="width: 100%;" type="submit">
                Sell
              </button>
            </form>
            <!-- Default form contact -->
          </div>
        </div>
      </section>
      <!-- Section: Features v.1 -->
    </main>
    <!--Main layout-->

    <script
      type="text/javascript"
      src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.5.1/jquery.min.js"
    ></script>
    <!-- Bootstrap tooltips -->
    <script
      type="text/javascript"
      src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.4/umd/popper.min.js"
    ></script>
    <!-- Bootstrap core JavaScript -->
    <script
      type="text/javascript"
      src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.5.0/js/bootstrap.min.js"
    ></script>
    <!-- MDB core JavaScript -->
    <script
      type="text/javascript"
      src="https://cdnjs.cloudflare.com/ajax/libs/mdbootstrap/4.19.1/js/mdb.min.js"
    ></script>
    <!-- Footer -->
    <%- include('./common/footer') -%>
    <!-- Footer -->
    \
  </body>
</html>
